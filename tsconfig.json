{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "Node16",  // Changed to commonjs for Node.js
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react", // You can change this based on your use case
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",  // Added to specify the output directory
    "rootDir": "./src"   // Added to specify the root directory
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
